- #TODO: Work out what to do with multiple shipments, page as it is can only display information for one shipment
- shipping_method = order.shipments.first.shipping_method

- if shipping_method.andand.require_ship_address
  / Delivery details
  %p.callout
    %strong
      - if shipping_method.andand.name
        #{shipping_method.name.html_safe}
      - else
        Delivery details

  - if @order.order_cycle.andand.pickup_time_for(@order.distributor)
    %h4
      Delivery on:
      %strong #{@order.order_cycle.pickup_time_for(@order.distributor)}
    - if shipping_method.andand.description
      %p
        %em #{shipping_method.description.html_safe}
    %br &nbsp;

  - if @order.ship_address
    %h4 Delivery address:
    %p
      #{@order.ship_address.full_name}
      %br
      #{@order.ship_address.full_address}
      %br
      #{@order.ship_address.phone}
      %br &nbsp;


- else
  / Collection details
  %p.callout
    %strong
      - if shipping_method.andand.name
        #{shipping_method.name.html_safe}
      - else
        Collection details

  - if @order.order_cycle.andand.pickup_time_for(@order.distributor).present?
    %h4
      Ready for collection:
      %strong #{@order.order_cycle.pickup_time_for(@order.distributor)}

  - if shipping_method.andand.description.present?
    %p
      %em #{shipping_method.description.html_safe}
      %br &nbsp;

  - if @order.order_cycle.andand.pickup_instructions_for(@order.distributor).present?
    %p
      %strong Collection instructions:
      %br
      #{@order.order_cycle.pickup_instructions_for(@order.distributor)}
